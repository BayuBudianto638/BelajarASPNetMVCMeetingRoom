@model IEnumerable<BelajarASPNetMVC.Models.Beverages.BeverageViewModel>

@{
    ViewBag.Title = "Master Beverage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Beverage</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Beverage
            </div>

            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Prices</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mst in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Price)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = mst.Id }, new { @class = "btn btn-secondary btn-sm" }) |
                                        @Html.ActionLink("Details", "Details", new { id = mst.Id }, new { @class = "btn btn-info btn-sm" })|
                                        @Html.ActionLink("Delete", "Delete", new { id = mst.Id }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <p>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Beverage")';">Create</button>
                </p>
            </div>
        </div>
    </div>
</div>

