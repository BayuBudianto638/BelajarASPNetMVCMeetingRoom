@model BelajarASPNetMVC.Models.Layouts.LayoutViewModel

@{
    ViewBag.Title = "Details Layout";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Details Layout</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Details Layout
            </div>
            <input type="hidden" id="id" name="id" value=model.Id>
            <p></p>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.LayoutTitle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LayoutTitle)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LayoutDescription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LayoutDescription)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LayoutPrice)
                    </dt>

                    <dd>
                        Rp. @Html.DisplayFor(model => model.LayoutPrice)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LayoutCapacity)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LayoutCapacity)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LayoutImages)
                    </dt>

                    <dd>
                        <img alt="" src="@ViewBag.Base64String" style="height:100px;width:200px;" />
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Layout", new { id = Model.Id })';return false;">Edit</button>
    <button class="btn btn-default" onclick="location.href='@Url.Action("Index", "Layout")';return false;">Cancel</button>
</p>
