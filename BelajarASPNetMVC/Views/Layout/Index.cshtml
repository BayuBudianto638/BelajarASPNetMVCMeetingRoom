@model IEnumerable<BelajarASPNetMVC.Models.Layouts.LayoutViewModel>

@{
    ViewBag.Title = "Master Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Layout</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Layout
            </div>

            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mst in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <img id="Images" style="width:60px;height:50px;" src='@Url.Action("GetFile", "Layout", new {id = mst.Id})' />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.LayoutTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.LayoutDescription)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = mst.Id }, new { @class = "btn btn-secondary btn-large" }) |
                                        @Html.ActionLink("Details", "Details", new { id = mst.Id }, new { @class = "btn btn-info btn-large" })|
                                        @Html.ActionLink("Delete", "Delete", new { id = mst.Id }, new { @class = "btn btn-danger btn-large" })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <p>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Layout")';">Create</button>
                </p>
            </div>
        </div>
    </div>
</div>

