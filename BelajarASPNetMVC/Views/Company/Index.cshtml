@model IEnumerable<BelajarASPNetMVC.Models.Companies.CompanyModel>

@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <hit class="page-header">Company</hit>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Company
            </div>

            <div class="panel-body">
                <div class="datatable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => company.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => company.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => company.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => company.Country)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new {id = company.Id}, new { @class = "btn btn-primary btn-large"}) |
                                        @Html.ActionLink("Delete", "Delete", new {id = company.Id}, new { @class ="btn btn-danger btn-large"} ) |
                                        @Html.ActionLink("Details", "Details", new {id = company.Id}, new { @class ="btn btn-info btn-large"})
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <p>
                 <buttn class="btn btn-primary" onclick="location.href='@Url.Action("Create","Company")';">
                     Create
                 </buttn>
            </p>
        </div>
    </div>
</div>