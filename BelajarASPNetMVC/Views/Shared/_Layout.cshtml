<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meeting Room</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BelajarASPNetMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Meeting Room</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item  dropdown">
                            <a href="#" class="nav-link dropdown-toggle menu-item" data-toggle="dropdown">Master</a>
                            <div class="dropdown-menu">                                
                                <a class="dropdown-item" asp-area="" asp-controller="Beverage" asp-action="Index">Food And Drinks</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Equipment" asp-action="Index">Equipment</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Room" asp-action="Index">Room</a>
                                <a class="dropdown-item" asp-area="" asp-controller="RoomSlot" asp-action="Index">Room Slot</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Layout" asp-action="Index">Layout</a>
                            </div>
                        </li>
                        <li class="nav-item  dropdown">
                            <a href="#" class="nav-link dropdown-toggle menu-item" data-toggle="dropdown">Transaction</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="BookingList" asp-action="Index">List Booking</a>
                            </div>
                        </li>
                        <li class="nav-item  dropdown">
                            <a href="#" class="nav-link dropdown-toggle menu-item" data-toggle="dropdown">User Management</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Index">User</a>
                            </div>
                        </li>

                        <li class="nav-item  dropdown">
                            <a href="#" class="nav-link dropdown-toggle menu-item" data-toggle="dropdown">Login</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">User</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Meeting Room - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
