@model IEnumerable<BelajarASPNetMVC.Models.Rooms.RoomViewModel>

@{
    ViewBag.Title = "Master Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Room</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Room
            </div>

            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Capacity</th>
                                <th>Booking</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mst in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <img id="Images" style="width:60px;height:50px;" src='@Url.Action("GetFile", "Room", new {id = mst.Id})' />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Capacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.BookFor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => mst.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = mst.Id }, new { @class = "btn btn-secondary btn-large" }) |
                                        @Html.ActionLink("Details", "Details", new { id = mst.Id }, new { @class = "btn btn-info btn-large" })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <p>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Room")';">Create</button>
                </p>
            </div>
        </div>
    </div>
</div>

